<odoo>
    <record id="view_customization_option_tree" model="ir.ui.view">
        <field name="name">customization.option.tree</field>
        <field name="model">food_ordering.customization_option</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price_extra"/>
                <field name="option_type"/>
            </tree>
        </field>
    </record>

    <record id="view_customization_option_form" model="ir.ui.view">
        <field name="name">customization.option.form</field>
        <field name="model">food_ordering.customization_option</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price_extra"/>
                        <field name="option_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
