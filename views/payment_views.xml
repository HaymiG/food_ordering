<odoo>
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">payment.tree</field>
        <field name="model">food_ordering.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="amount"/>
                <field name="method"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">payment.form</field>
        <field name="model">food_ordering.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="amount"/>
                        <field name="method"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
