<odoo>
    <record id="view_food_category_tree" model="ir.ui.view">
        <field name="name">food.category.tree</field>
        <field name="model">food_ordering.food_category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_food_category_form" model="ir.ui.view">
        <field name="name">food.category.form</field>
        <field name="model">food_ordering.food_category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_food_category_form" model="ir.ui.view">
    <field name="name">food.category.form</field>
    <field name="model">food_ordering.food_category</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <!-- <field name="image_128"/> -->
                </group>
            </sheet>
        </form>
    </field>
</record>

</odoo>
